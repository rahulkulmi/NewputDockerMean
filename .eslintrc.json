{
    "plugins": ["node"],
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "rules": {
        "node/exports-style": ["error", "module.exports"],
        "space-before-blocks": 2,
        "no-extra-semi": 2,
//        "handle-callback-err": 2,
        "no-mixed-requires": 2,
        "no-new-require": 2,
//        "no-path-concat": 2,
//        "no-sync": 2,
        "no-restricted-modules": 2,
        "no-process-exit": 2
    },
    "env": {
        "mocha": true,
        "node":  true,
        "es6":   true
    }
}
